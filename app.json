{
  "name": "WhatsApp Bot",
  "description": "A simple WhatsApp bot using Baileys",
  "repository": "https://github.com/your-username/your-repo",
  "logo": "https://nodejs.org/static/images/logos/nodejs-new-pantone-black.svg",
  "env": {
    "OWNER_NUMBER": {
      "description": "Owner's WhatsApp Number (with @s.whatsapp.net)",
      "value": "1234567890@s.whatsapp.net"
    },
    "AUTO_STATUS_VIEW": {
      "description": "Enable or Disable Auto Status View",
      "value": "true",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
